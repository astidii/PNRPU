#include <iostream>
#include <clocale>
using namespace std;;

void count(int *a, int N) {
	int sum = 0;
	for (int i = 0; i < N; i++) {
		if (a[i] % 2 == 0) {
			sum += 1;
		}
	}
	cout << sum;
}

void count(char* a, int N) {
	int sum = 0;
	for (int i = 0; i < N; i++) {
		if ((a[i] == 'а') && (a[i - 1] == ' ')) {
			sum += 1;
		}
	}
	if (a[0] == 'а') {
		sum += 1;
	}
	cout << sum;
}

int main() {
	setlocale(LC_ALL, "ru");
	int a[] = { 1, 2, 3, 4, 6, 8, 6 };
	cout << "Количество четных элементов: ";
	count(a, 7);
	cout << endl;
	char string[] = "Адвокат Дмитрий анонсировал аппеляцию";
	cout << "Количество слов начаинающихся с a: ";
	count(string, strlen(string));
}
